 <beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/tx
                           http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
                           http://www.springframework.org/schema/aop
                           http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">
                           
	<bean id="baseballCardCollectionService" class="advws.net.ricews.BaseballCardCollectionServiceImplA"/>
	<bean id="personServiceREST" class="advws.net.ricews.kim.person.RESTPersonServiceImpl"/>
	
	<bean id="kimRESTService" class="org.kuali.rice.ksb.messaging.RESTServiceDefinition" abstract="true">
	   <property name="serviceNameSpaceURI" value="KIM"/>
	</bean>
	
	<bean parent="kimLocalServiceExporter">
	<property name="remotedServiceRegistry" ref="enServiceInvoker"/>
	  <property name="serviceDefinition">
	    <bean parent="kimRESTService"
	      p:service-ref="baseballCardCollectionService"
	      p:localServiceName="baseballCardCollectionService" 
	      p:resourceClass="advws.net.ricews.BaseballCardCollectionServiceA" />
	  </property>
	  <property name="exportIf" value="true"/>
	</bean>
	
<bean parent="kimLocalServiceExporter">
	<property name="remotedServiceRegistry" ref="enServiceInvoker"/>
	  <property name="serviceDefinition">
	    <bean parent="kimRESTService"
	      p:service-ref="personServiceREST"
	      p:localServiceName="personServiceREST" 
	      p:resourceClass="advws.net.ricews.kim.person.RESTPersonService" />
	  </property>
	  <property name="exportIf" value="true"/>
</bean>

</beans>